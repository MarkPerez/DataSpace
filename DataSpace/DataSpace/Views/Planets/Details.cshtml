@model DataSpace.Models.Planet

@{
    ViewBag.Title = "Details";
}

@if (Model.Picture != null)
{
    <style>
    body{
        background-image: url('@Url.Content(Model.Picture)'), url("~/Content/images/milky-way-1016309_1920.jpg");
<img src="~/Content/images/milky-way-1016309_1920.jpg" />
        background-size: 900px 900px, cover;
        background-repeat: no-repeat, no-repeat;
        color: white;
    }
    </style>

    if (Model.Name == "Saturn")
    {
        <style>
                body {
                    background-image: url("~/Content/images/saturn-153576_1280.png"), url("~/Content/images/milky-way-1016309_1920.jpg");
                    background-size: 1600px 900px, cover;
                    background-repeat: no-repeat, no-repeat;
                    color: white;
                }
    </style>
    }
}

<h2 id="header">Details</h2>

<div>
    <h4 id="nameFade">@Model.Name</h4>
    <hr />
    <div class="viewSections" id="dropDown">
        <dl class="dl-horizontal">

            <dt>
                @Html.DisplayNameFor(model => model.Name):
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

