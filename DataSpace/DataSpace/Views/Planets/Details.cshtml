                @Html.DisplayNameFor(model => model.PlanetType):
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PlanetType)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DistanceFromSun):
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DistanceFromSun)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Diameter):
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Diameter)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DayLength):
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DayLength)
            </dd>

            <dt>
